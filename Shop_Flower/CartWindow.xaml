<Window x:Class="Shop_Flower.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_Flower"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">
    <Grid Margin="10">
        <ListView x:Name="CartListView" Margin="0,0,0,50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Sản phẩm" DisplayMemberBinding="{Binding FlowerName}" Width="200"/>
                    <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                    <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding Quantity}" Width="100"/>
                    <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C}}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Text="{Binding TotalAmount, StringFormat='Tổng cộng: {0:C}'}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Đặt hàng" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="PlaceOrderButton_Click"/>
    </Grid>
</Window>
